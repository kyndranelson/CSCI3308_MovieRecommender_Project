<%- include('../partials/header', { title: 'Discover Movies - Purrfect Movie Rec' }) %>

<!-- Include the menu -->
<%- include('../partials/menu') %>

<div class="container mt-4">
  <!-- Page heading -->
  <h2 class="mb-4">Popular Movies</h2>

  <!-- Carousel -->
  <div id="movieCarousel" class="carousel slide">
    <div class="carousel-inner">
      <% let moviesPerSlide = 4; %> <!-- Set the number of movies per slide -->
      <% for (let i = 0; i < topMovies.length; i += moviesPerSlide) { %> <!-- Loop for each slide -->
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>"> <!-- Define a carousel item; add 'active' class for the first slide -->
          <div class="row">
            <% for (let j = i; j < i + moviesPerSlide && j < topMovies.length; j++) { %> <!-- Loop for each movie within a slide -->
              <div class="col-md-3">
                <div class="card">
                  <!-- Movie poster at the top of the card -->
                  <img src="<%= 'https://image.tmdb.org/t/p/w500' + topMovies[j].poster_path %>" class="card-img-top" alt="<%= topMovies[j].title %> Poster">
                  <div class="card-body">
                    <h6 class="card-title"><%= topMovies[j].title %></h6>
                    <p class="card-text"><strong>Release Date:</strong> <%= topMovies[j].release_date %></p>
                    <p class="card-text"><strong>Genre:</strong> <%= topMovies[j].genres_ids.join(', ') %></p>
                    <p class="card-text"><strong>Average Score:</strong> <%= topMovies[j].vote_average %></p>
                    <!-- Buttons for actions -->
                    <button 
                      class="btn btn-primary save-movie-btn" 
                      data-id="<%= topMovies[j].id %>" 
                      data-title="<%= topMovies[j].title %>" 
                      data-release_date="<%= topMovies[j].release_date %>" 
                      data-image_url="<%= 'https://image.tmdb.org/t/p/w500' + topMovies[j].poster_path %>"
                    >
                      Save Movie
                    </button>
                    <button 
                      class="btn btn-primary watch-movie-btn" 
                      data-id="<%= topMovies[j].id %>" 
                      data-title="<%= topMovies[j].title %>" 
                      data-release_date="<%= topMovies[j].release_date %>" 
                      data-image_url="<%= 'https://image.tmdb.org/t/p/w500' + topMovies[j].poster_path %>"
                    >
                      Mark as Watched
                    </button>
                    <!-- Add other details you want to display -->
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
    <!-- Carousel navigation buttons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  
</div>

<!-- Include the footer -->
<%- include('../partials/footer') %>
