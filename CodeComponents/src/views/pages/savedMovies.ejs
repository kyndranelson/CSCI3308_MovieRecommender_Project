<%- include('../partials/header', { title: 'Saved Movies - Purrfect Movie Rec' }) %>


<!-- Include the menu -->
<%- include('../partials/menu') %>

<div class="container mt-4">
    <!-- Page heading -->
    <h2 class="mb-4">Saved Movies</h2>

    <!-- Movie cards in a grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% savedMovies.forEach(movie => { %>
            <div class="col">
                <!-- Bootstrap card for each movie -->
                <div class="card">
                    <!-- Movie poster at the top of the card -->
                    <img src="<%= movie.Poster %>" class="card-img-top" alt="<%= movie.Title %> Poster">
                    <div class="card-body">
                        <!-- Movie title -->
                        <h5 class="card-title"><%= movie.Title %></h5>
                        <!-- Movie details -->
                        <p class="card-text"><strong>Year:</strong> <%= movie.Year %></p>
                        <p class="card-text"><strong>Type:</strong> <%= movie.Type %></p>
                        <p class="card-text"><strong>IMDb ID:</strong> <%= movie.imdbID %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<!-- Include the footer -->
<%- include('../partials/footer') %>
